<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>CheckUser</servlet-name>
        <servlet-class>com.chandru.zoho.CheckUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckUser</servlet-name>
        <url-pattern>/CheckUser</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Rest_Servlet</servlet-name>
        <servlet-class>com.chandru.zoho.Rest_Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Rest_Servlet</servlet-name>
        <url-pattern>/Rest_Servlet/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Messages</servlet-name>
        <servlet-class>com.chandru.zoho.api.Messages</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Messages</servlet-name>
        <url-pattern>/chats/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UserMessage</servlet-name>
        <servlet-class>com.chandru.zoho.api.UserMessage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserMessage</servlet-name>
        <url-pattern>/chats/messages/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Get_RestApi</servlet-name>
        <servlet-class>com.chandru.zoho.Get_RestApi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Get_RestApi</servlet-name>
        <url-pattern>/Get_RestApi</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChatLogin</servlet-name>
        <servlet-class>com.chandru.zoho.chat_application.ChatLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChatLogin</servlet-name>
        <url-pattern>/ChatLogin</url-pattern>
    </servlet-mapping>
</web-app>